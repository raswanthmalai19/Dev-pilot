# DevOps Agent Configuration
# Copy this to .env and fill in your values

# ============================================================================
# REQUIRED: Gemini AI Configuration
# ============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# REQUIRED: GCP Configuration
# ============================================================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# ============================================================================
# OPTIONAL: GitHub Integration
# ============================================================================
GITHUB_TOKEN=your_github_personal_access_token

# ============================================================================
# OPTIONAL: Security Configuration
# ============================================================================
SECRETS_PASSPHRASE=your_strong_random_passphrase_here

# ============================================================================
# OPTIONAL: Dev Pilot Configuration
# ============================================================================
# Approved branches for deployment (comma-separated)
DEVPILOT_APPROVED_BRANCHES=main,devpilot-tested,production

# Auto-rollback on health check failure
DEVPILOT_AUTO_ROLLBACK=true

# Strict validation mode (reject deployment if any check fails)
DEVPILOT_STRICT_MODE=true

# Maximum retries for build/deploy
DEVPILOT_MAX_RETRIES=2

# ============================================================================
# OPTIONAL: Deployment Defaults
# ============================================================================
CLOUD_RUN_CPU=1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_MIN_INSTANCES=0
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_PORT=8080

# ============================================================================
# OPTIONAL: Webhook Notifications
# ============================================================================
# WEBHOOK_URL=https://your-webhook-endpoint.com/notify
